<!DOCTYPE html>
<html >
    <head>
        <title>Gestion de ses candidatures</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" href="/stylesheets/styles.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <%- include('header')%>
        <main style="margin-top: 15px; padding-top: 0;">
            <div align="right" >    
                <form action="/candidat/demander_devenir_admin" style="display: inline-block; margin-right: 10px;" method="GET">
                    <button type="submit" class="btn btn-sm btn-outline-secondary" name="dev_adm">Devenir admin</button>
                </form>
                <% if (session.type_utilisateur==='candidat') { %>
                    <form action="/candidat/demander_devenir_recruteur" style="display: inline-block;" method="GET">
                        <button type="submit" class="btn btn-sm btn-outline-secondary" name="dev_rec">Devenir recruteur</button>
                    </form>
                <% } %>
            </div>           
            <h1>Mes candidatures </h1>
            <div class="container">
                <h3 class="mt-4">Candidatures en cours :</h3>
                <%- include('filter', { filtres: null, filtres_customs: null, filtres_checkbox: filtres_checkbox, numero: 1}) %>
                <table class="table table-striped mt-3">
                    <thead align="center">
                        <tr>
                            <th>Intitulé</th>
                            <th>Entreprise</th>
                            <th>Type de Métier</th>
                            <th>Lieu de Mission</th>
                            <th>Salaire</th>
                            <th>Date publ.</th>
                            <th>État</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (candidatures && candidatures.length > 0) { %>
                            <% candidatures.forEach(function(c) { %>
                                <tr id="tr1">
                                    <td><%= c.intitule %></td>
                                    <td><%= c.entreprise %></td>
                                    <td><%= c.type_metier %></td>
                                    <td><%= c.lieu_mission %></td>
                                    <td><%= c.salaire_min %>€ - <%= c.salaire_max %>€</td>
                                    <td><%= new Date(c.date_validite).toLocaleDateString('fr-FR')  %></td>
                                    <td><%= c.etat === 'publiée' ? 'actif' : c.etat %></td>
                                    <td >
                                        <% if (c.etat === 'expirée') { %>
                                            <span class="text-muted">Plus accessible.</span>
                                        <% } else { %>
                                            <form action="./page_d_une_candidature" method="POST" style="display:inline;">
                                                <input type="hidden" name="offreEmploiId" value="<%= c.offre_emploi %>">
                                                <button type="submit" class="btn btn-success btn">Gérer</button>
                                            </form>
                                        <% } %>
                                    </td>

                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center">Aucune candidature disponible.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <form action="/candidat/ecran_candidat" method="get">
                <button type="submit" class="btn btn-primary">Retourner</button>
            </form>
            
        </main>
    </body>
</html>
