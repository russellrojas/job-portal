<!DOCTYPE html>
<html >
    <head>
        <title>Ecran Candidat - Page Principale</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/stylesheets/styles.css"> <!--Ajouter--> 
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    
    <body>
    <%- include('header')%> 
        <main style="margin-top: 15px; padding-top: 0;">
            <div align="right" >    
                <form action="/candidat/demander_devenir_admin" style="display: inline-block; margin-right: 10px;" method="GET">
                    <button type="submit" class="btn btn-sm btn-outline-secondary" name="dev_adm">Devenir admin</button>
                </form>
                <% if (session.type_utilisateur==='candidat') { %>
                    <form action="/candidat/demander_devenir_recruteur" style="display: inline-block;" method="GET">
                        <button type="submit" class="btn btn-sm btn-outline-secondary" name="dev_rec">Devenir recruteur</button>
                    </form>
                <% } %>
            </div>
            <div align="left">
                <form action="/candidat/gestion_de_ses_candidatures" style="display: inline-block; margin-right: 10px;" method="GET">
                    <button type="submit" class="btn btn-success">Mes candidatures</button>
                </form>
                <% if (session.type_utilisateur === 'recruteur') { %>
                    <form action="/recruteur/ecran_recruteur" method="GET" style="display: inline-block; margin-right: 10px;">
                        <button type="submit" class="btn btn-success">Récruter</button>
                    </form>
                    <form action="/recruteur/rejoindre_creer_une_organisation" method="GET" style="display: inline-block; margin-right: 10px;">
                        <button type="submit" class="btn btn-success">Organisations</button>
                    </form>
                <% } %>
            </div>
            <!--message pour reussite de boutton-->
            <% if (message === 'success') { %>
            </br><div class="alert alert-success">Candidature envoyée avec succès.</div>
            <% } else if (message === 'erreur') { %>
            </br><div class="alert alert-danger">Une erreur est survenue lors de la candidature.</div>
            <% } else if (message === 'annulation_success') { %>
            </br><div class="alert alert-warning">Candidature annulée avec succès.</div>
            <% } else if (message === 'erreur_annulation') { %>
            </br><div class="alert alert-danger">Une erreur est survenue lors de l'annulation.</div>
            <% } else if (message === 'fichier_supprime') { %>
            </br><div class="alert alert-success">Fichier supprimé avec succès.</div>
            <% } %>

            <h1 align="center"><strong>Portail des Offres d'Emploi</strong></h1>
            <div class="container-fluid">
                </br>
                <h3 >Opportunités d'Emploi Disponibles</h3>
                <%- include('filter', { filtres: filtres, filtres_customs: filtres_customs, filtres_checkbox: null, numero: 1}) %>
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Intitulé</th>
                            <th>Type de Métier</th>
                            <th>Lieu de Mission</th>
                            <th>Salaire</th>
                            <th>Candidater</th>
                            <th>En savoir plus</th>
                        </tr>
                    </thead>
                    <tbody id="table-body">
                        <% if (offres && offres.length > 0) { %>
                            <% offres.forEach(function(offre) { %>
                                <tr id="tr1">
                                    <td><%= offre.intitule %></td>
                                    <td><%= offre.type_metier %></td>
                                    <td><%= offre.lieu_mission %></td>
                                    <td><%= offre.salaire_min %>€ - <%= offre.salaire_max %>€</td>
                                    <td>
                                        <% if (offresCandidatures.includes(offre.id)) { %>
                                            <form action="/candidat/annuler_candidature" method="POST" style="display:inline;">
                                                <input type="hidden" name="offreEmploiId" value="<%= offre.id %>">
                                                <button type="submit" class="btn btn-success" disabled>Candidaté</button>
                                            </form>
                                        <% } else { %>
                                            <form action="/candidat/candidater" method="POST" style="display:inline;">
                                                <input type="hidden" name="offreEmploiId" value="<%= offre.id %>">
                                                <input type="hidden" name="candidatureRecente" value="true">
                                                <button type="submit" class="btn btn-success">Candidater</button>
                                            </form>
                                        <% } %>
                                    </td>
                                    <td>
                                        <form action="/candidat/page_d_une_offre" method="POST">
                                            <input type="hidden" name="offreId" value="<%= offre.id %>">
                                            <button type="submit" class="btn btn-primary">Détails</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">Aucune offre disponible.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <%- include('paginator', {taille: offres.length , numero: 1})%>
            </div>
        </main>
    </body>
</html>
